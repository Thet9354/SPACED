<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/registeration_bg"
    tools:context=".PrivacyPolicy_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/txtView_privacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Privacy policy"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtView_Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Done"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/scrollView_privacyPolicy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!--Last update-->
            <RelativeLayout
                android:id="@+id/relLayout_privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline51">

                <TextView
                    android:id="@+id/txtView_privacyPolicy_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacyPolicyIntro"
                    android:textSize="12sp" />
            </RelativeLayout>

            <!--Information collection and use-->
            <RelativeLayout
                android:id="@+id/relLayout_infoCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relLayout_privacyPolicy">


                <TextView
                    android:id="@+id/txtView_infoCollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information Collection And Use"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtView_infoCollection_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtView_infoCollection"
                    android:layout_marginTop="10dp"
                    android:text="@string/infoCollection" />
            </RelativeLayout>

            <!--Log data-->
            <RelativeLayout
                android:id="@+id/relLayout_logData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relLayout_infoCollection">


                <TextView
                    android:id="@+id/txtView_logData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Data"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtView_logData_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtView_logData"
                    android:layout_marginTop="10dp"
                    android:text="@string/logData" />
            </RelativeLayout>

            <!--Communication-->
            <RelativeLayout
                android:id="@+id/relLayout_communications"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relLayout_logData">


                <TextView
                    android:id="@+id/txtView_communications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Communication"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_communications_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtView_communications"
                    android:layout_marginTop="10dp"
                    android:text="@string/communication" />
            </RelativeLayout>

            <!--Security-->
            <RelativeLayout
                android:id="@+id/relLayout_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/relLayout_communications"
                tools:layout_editor_absoluteX="0dp">


                <TextView
                    android:id="@+id/txtView_security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtView_security_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtView_security"
                    android:layout_marginTop="10dp"
                    android:text="@string/privacyPolicy_security" />

            </RelativeLayout>

            <!--Changes to privacy policy-->
            <RelativeLayout
                android:id="@+id/relLayout_privacyPolicy_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/relLayout_security"
                tools:layout_editor_absoluteX="0dp">


                <TextView
                    android:id="@+id/txtView_privacyPolicy_changes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Changes To This Privacy Policy"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtView_privacyPolicy_changes_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtView_privacyPolicy_changes"
                    android:layout_marginTop="10dp"
                    android:text="@string/privacyPolicy_changes" />
            </RelativeLayout>

            <!--Contact us-->
            <RelativeLayout
                android:id="@+id/relLayout_contactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/relLayout_privacyPolicy_changes"
                tools:layout_editor_absoluteX="0dp">


                <TextView
                    android:id="@+id/txtView_contactUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtView_contactUs_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtView_contactUs"
                    android:layout_marginTop="10dp"
                    android:text="If you have any questions about this Privacy Policy, please contact us." />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>