<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/ticket_cardView"
        app:cardCornerRadius="20dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#7bc8ad"
        android:layout_marginTop="30dp"
        android:elevation="18dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:id="@+id/rel_flightDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SPACE_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/language_icon"
                android:drawablePadding="5dp"
                android:drawableTint="@color/black"
                android:text="SP4892-X"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25sp"
                android:layout_marginRight="15sp"
                android:text="SPACED"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_earth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SPACE_ID"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:text="Earth"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_earth"
                android:layout_marginLeft="18dp"
                android:text="Singapore"
                android:textColor="@color/dark_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_arrivalPlanet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SPACE_ID"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="18dp"
                android:text="Mars"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_arrivalArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_arrivalPlanet"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="Esrauts"
                android:textColor="@color/dark_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_departureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_country"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:text="09:15 AM"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_departureDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_departureTime"
                android:layout_marginLeft="18dp"
                android:text="Fri, 05 Sep"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/txtView_arrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_arrivalArea"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="06:45 PM"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_arrivalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_arrivalTime"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="Mon, 17 Jun"
                android:textColor="@color/dark_gray" />


            <TextView
                android:id="@+id/txtView_boardingPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_arrivalDate"
                android:layout_marginLeft="18sp"
                android:layout_marginTop="60dp"
                android:text="Boarding pass"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_boardingPass"
                android:layout_centerHorizontal="true"
                android:src="@drawable/barcode"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>